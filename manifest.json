{
    "name": "SHIELD",
    "description": "The lightest ad blocker ever built â€” blocks ads, trackers, and annoyances with unmatched efficiency.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "shield_rules",
                "enabled": true,
                "path": "rules/shield_rules.json"
            }
        ]
    }
}